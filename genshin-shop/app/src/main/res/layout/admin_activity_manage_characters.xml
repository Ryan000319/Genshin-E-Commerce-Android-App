<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/moccasin"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        android:background="@drawable/card_background"
        android:elevation="4dp">

        <!-- Title -->
        <TextView
            android:id="@+id/admin_title_text_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Manage Characters"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_marginBottom="16dp" />

        <!-- Name Input -->
        <EditText
            android:id="@+id/character_name_edit_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Character Name"
            android:background="@drawable/card_border"
            android:padding="12dp"
            android:textColor="@color/black"
            android:textSize="14sp"
            android:layout_marginBottom="12dp" />

        <!-- Keyword Input -->
        <EditText
            android:id="@+id/keyword_edit_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Keyword"
            android:background="@drawable/card_border"
            android:padding="12dp"
            android:textColor="@color/black"
            android:textSize="14sp"
            android:layout_marginBottom="12dp" />

        <!-- Select Video Button -->
        <Button
            android:id="@+id/select_video_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/black"
            android:padding="12dp"
            android:text="Select Video"
            android:textColor="@android:color/white"
            android:textStyle="bold"
            android:layout_marginBottom="12dp" />

        <!-- Select Sticker Button -->
        <Button
            android:id="@+id/select_sticker_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/black"
            android:text="Select Sticker"
            android:padding="12dp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp" />


        <!-- Upload Button -->
        <Button
            android:id="@+id/upload_character_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/black"
            android:padding="12dp"
            android:text="Add Character"
            android:textColor="@android:color/white"
            android:textStyle="bold"
            android:layout_marginBottom="16dp" />

        <!-- Progress Bar -->
        <ProgressBar
            android:id="@+id/upload_progress_bar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="16dp" />

        <!-- Subtitle -->
        <TextView
            android:id="@+id/character_list_subtitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Characters List"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="8dp" />

        <!-- Characters List -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/character_recycler_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:layout_marginBottom="16dp"
            android:padding="16dp"/>
    </LinearLayout>
</ScrollView>
